---
const ProgrammingLanguages = [
  { name: "React", logo: "/react-logo.svg", tags: ["Projects"] },
  { name: "Laravel", logo: "/laravel-logo.svg", tags: ["Coursework"] },
  { name: "Astro", logo: "/astro-logo.svg", tags: ["Projects"] },
];

import Tag from "../utils/tag.astro";
---

<div
  class="flex flex-col items-center justify-center py-16 w-full text-white"
>
  <h1 class="text-2xl lg:text-3xl">Frameworks/Libraries I've Used:</h1>
  <ul class="grid grid-cols-2 lg:grid-cols-4 gap-8 mt-4 w-full">
    {ProgrammingLanguages.map((language) => (
      <li class="flex flex-col items-center shadow-lg bg-neutral-800 py-4 rounded-lg hover:scale-105 transition-transform duration-300">
        <img src={language.logo} alt={language.name} class="w-18 h-18" />
        {language.name}
        {language.tags && language.tags.length > 0 && (
          <div class="mt-2 flex flex-col justify-center space-y-2">
            {language.tags.map((tag) => (
              <Tag text={tag} />
            ))}
          </div>
        )}
      </li>
    ))}
  </ul>
</div>
