---
import Tag from "../utils/tag.astro";

const ProgrammingLanguages = [
  { name: "HTML", logo: "/html-logo.svg", tags: ["Projects", "Coursework"] },
  { name: "JavaScript", logo: "/js-logo.svg", tags: ["Projects"] },
  { name: "CSS", logo: "/css-logo.svg", tags: ["Projects"] },
  { name: "Scala", logo: "/scala-logo.svg", tags: ["Coursework"] },
  { name: "Java", logo: "/java-logo.svg", tags: ["Coursework"] },
  { name: "PHP", logo: "/php-logo.svg", tags: ["Coursework"] },
];
---

<div
  class="flex flex-col items-center justify-center py-16 w-full text-white"
>
  <h1 class="text-2xl lg:text-3xl text-center">Languages I've worked with:</h1>
  <ul class="grid grid-cols-2 lg:grid-cols-4 gap-8 mt-8 w-full">
    {
      ProgrammingLanguages.map((language) => (
        <li class="flex flex-col items-center bg-neutral-800 shadow-lg py-4 rounded-lg hover:scale-105 transition-transform duration-300">
          <img src={language.logo} alt={language.name} class="w-18 h-18" />
          {language.name}
          {language.tags && language.tags.length > 0 && (
            <div class="mt-2 flex flex-col justify-center space-y-2">
              {language.tags.map((tag) => (
                <Tag text={tag} />
              ))}
            </div>
          )}
        </li>
      ))
    }
  </ul>
</div>
